#include<iostream>
using namespace std;
int main()
{
int k, i = 1, sum_k = 0, number;
cout << " Enter the amount of integers to sum = "; cin >> k;
if (k >= i)
{
   for ( int n = 0; n < k; i++)
   {
     cout << "Enter integer nr. " << i << ": ";
     cin >> number;
     sum_k += number; i++;
   }
cout << " The total sum of " << k << " integers is: " << sum_k;
return 0;
}
